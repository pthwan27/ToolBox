<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <View
        android:id="@+id/guideline1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#8FECECEC"
        app:layout_constraintTop_toBottomOf="@+id/protractor" />

    <View
        android:id="@+id/guideline2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="1dp"
        android:background="#8FECECEC"
        app:layout_constraintBottom_toTopOf="@+id/protractor"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/guideline3"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#8FECECEC"
        app:layout_constraintBottom_toTopOf="@+id/protractor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btCapture" />

    <View
        android:id="@+id/guideline4"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#8FECECEC"
        app:layout_constraintBottom_toTopOf="@+id/protractor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btCapture"
        app:layout_constraintVertical_bias="0.237" />

    <View
        android:id="@+id/protractor"
        android:layout_width="384dp"
        android:layout_height="205dp"
        android:layout_gravity="center"
        android:layout_marginStart="10px"
        android:layout_marginTop="10px"
        android:layout_marginEnd="10px"
        android:layout_marginBottom="10px"
        android:background="@drawable/protractor"
        android:gravity="left"
        android:rotation="-90"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.771"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <Button
        android:id="@+id/btCapture"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="325dp"
        android:rotation="-90"
        android:text="capture"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/protractor"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>