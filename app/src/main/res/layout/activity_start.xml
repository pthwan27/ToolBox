<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D000000">

    <Button
        android:id="@+id/intentbt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/temp2"
        android:onClick="clickbt" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:layout_above="@id/imageguideline"
        android:layout_marginBottom="0dp"
        android:layout_toLeftOf="@id/imageView3"
        android:rotation="-10"
        app:srcCompat="@drawable/start_hammer" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="170dp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_above="@id/imageguideline"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@id/centersapce"
        android:rotation="5"
        app:srcCompat="@drawable/start_spanner" />

    <Space
        android:id="@+id/centersapce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/titletextLayout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="170dp"
        android:layout_above="@id/imageguideline"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@id/centersapce"
        android:rotation="-5"
        app:srcCompat="@drawable/start_wrench" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="70dp"
        android:layout_height="170dp"
        android:layout_above="@id/imageguideline"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imageView4"
        android:rotation="5"
        app:srcCompat="@drawable/start_flatscrewdriver" />
    <LinearLayout
        android:id="@+id/titletextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titletext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:clickable="false"
            android:fontFamily="@font/ubuntu_bold"
            android:text="도"
            android:rotation="-9"
            android:textColor="#000000"
            android:textSize="65dp" />

        <TextView
            android:id="@+id/titletext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:fontFamily="@font/ubuntu_bold"
            android:text="구"
            android:rotation="-3"
            android:textColor="#000000"
            android:textSize="65dp" />

        <TextView
            android:id="@+id/titletext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:fontFamily="@font/ubuntu_bold"
            android:text="상"
            android:rotation="3"
            android:textColor="#000000"
            android:textSize="65dp" />

        <TextView
            android:id="@+id/titletext4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="자"
            android:rotation="9"
            android:textColor="#000000"
            android:textSize="65dp" />
    </LinearLayout>


    <Space
        android:id="@+id/imageguideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/titletextLayout" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="264dp"
        android:layout_height="166dp"
        android:layout_below="@id/titletextLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/start_toolbox" />



</RelativeLayout>