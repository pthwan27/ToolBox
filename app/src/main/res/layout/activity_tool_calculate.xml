<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:src="@drawable/ic_back"
            app:tint="@color/colorIcons" />

        <TextView
            android:id="@+id/tvInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageBack"
            android:gravity="end"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_marginTop="5dp"
            android:textSize="40dp"
            />

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@id/tvInput"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/tvOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInput"
            android:gravity="end"
            android:padding="10dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="60dp" />

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@id/tvOutput"
            android:background="@color/colorWhite" />
    </RelativeLayout>
<!--    숫자입력창-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:id="@+id/ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="false"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:columnCount="1"
                android:rowCount="6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btBs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="Backspace"
                        android:textSize="@dimen/_20ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btC"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="C"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/btBracket"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="()"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/btPercent"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="%"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/btDivide"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="÷"
                        android:textSize="@dimen/_20ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt7"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="7"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/bt8"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="8"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/bt9"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="9"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/btMultiply"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="x"
                        android:textSize="@dimen/_20ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt4"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="4"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/bt5"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="5"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/bt6"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="6"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/btMinus"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="-"
                        android:textSize="@dimen/_20ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt1"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="1"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/bt2"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="2"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/bt3"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="3"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/btPlus"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="+"
                        android:textSize="@dimen/_20ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btPM"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textSize="@dimen/_20ssp"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/bt0"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="0"
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/btDot"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="."
                        android:textSize="@dimen/_20ssp" />

                    <Button
                        android:id="@+id/btEqual"
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_calculateselector"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="="
                        android:textSize="@dimen/_20ssp" />
                </LinearLayout>

            </GridLayout>
        </RelativeLayout>//버튼
    </RelativeLayout>//배경화면 지정해야해서 layout따로분리

</LinearLayout>